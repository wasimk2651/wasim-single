extends layout

block content
  h1 Search Results
  table.table.table-striped
    thead
      tr
        th Country Name
        th Country Code
        th Population
    tbody
      each row in rows
        tr
          td= row.Name
          td= row.Code
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}

  link(rel="stylesheet", href="/result.css")